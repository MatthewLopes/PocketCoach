<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.LeaderboardsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#d9d9d9"><![CDATA[>







        ]]>

    <android.support.design.widget.TabLayout
        android:id="@+id/socialTabLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimaryDark"
        app:tabGravity="fill">

        <android.support.design.widget.TabItem
            android:id="@+id/messagesTab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Messages" />

        <android.support.design.widget.TabItem
            android:id="@+id/socialTab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Social" />

        <android.support.design.widget.TabItem
            android:id="@+id/leaderboardTab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leaderboard" />
    </android.support.design.widget.TabLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/filterTabLayout"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/socialTabLayout"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/background_light"
            app:tabGravity="fill">

            <android.support.design.widget.TabItem
                android:id="@+id/buddiesTab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buddies" />

            <android.support.design.widget.TabItem
                android:id="@+id/gymTab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gym" />
        </android.support.design.widget.TabLayout>

    </RelativeLayout>
</FrameLayout>
