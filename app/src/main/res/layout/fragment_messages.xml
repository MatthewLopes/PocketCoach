<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.MessagesFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#d9d9d9"><![CDATA[>







        ]]>

    <android.support.design.widget.TabLayout
        android:id="@+id/socialTabLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimaryDark"
        app:tabGravity="fill">

        <android.support.design.widget.TabItem
            android:id="@+id/messagesTab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Messages" />

        <android.support.design.widget.TabItem
            android:id="@+id/socialTab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Social" />

        <android.support.design.widget.TabItem
            android:id="@+id/leaderboardTab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leaderboard" />
    </android.support.design.widget.TabLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/socialTabLayout">

        <LinearLayout
            android:id="@+id/postLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/postLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/background_light">

            <ImageView
                android:id="@+id/postProfileImage1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_profilepic" />

            <TextView
                android:id="@+id/usernameText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/postProfileImage1"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/postProfileImage1"
                android:autoText="true"
                android:text="Username"
                android:textColor="@color/bb_darkBackgroundColor" />

            <TextView
                android:id="@+id/commentText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/usernameText1"
                android:layout_below="@+id/usernameText1"
                android:autoText="true"
                android:text="Comment comment comment comment comment comment comment comment comment comment." />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:text="01-14-18" />


        </RelativeLayout>
        </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>