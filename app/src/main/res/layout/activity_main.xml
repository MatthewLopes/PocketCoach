<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.matthewlopes.pocketcoach.MainActivity">

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="Username" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="38dp"
                app:srcCompat="@mipmap/ic_launcher" />

                <ProgressBar
                android:id="@+id/progressBar3"
                style="?android:attr/progressBarStyle"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/imageView"
                android:layout_marginEnd="14dp"
                android:layout_marginRight="14dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/imageView"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/imageView"
                android:layout_marginBottom="134dp"
                android:text="Badges" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/textView"
                android:layout_marginBottom="53dp"
                android:text="Buddies" />

            <ProgressBar
                android:id="@+id/progressBar4"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_above="@+id/textView"
                android:layout_alignLeft="@+id/textView"
                android:layout_alignStart="@+id/textView"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/progressBar4"
                android:layout_alignEnd="@+id/progressBar4"
                android:layout_alignLeft="@+id/progressBar4"
                android:layout_alignRight="@+id/progressBar4"
                android:layout_alignStart="@+id/progressBar4"
                android:text="Level 1" />

            <QuickContactBadge
                android:id="@+id/quickContactBadge2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@android:drawable/btn_star_big_on"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/textView2"
                android:layout_alignStart="@+id/textView2" />

            <QuickContactBadge
                android:id="@+id/quickContactBadge3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignEnd="@+id/progressBar4"
                android:layout_alignRight="@+id/progressBar4"
                android:layout_alignTop="@+id/quickContactBadge2"
                android:layout_marginEnd="28dp"
                android:layout_marginRight="28dp"
                app:srcCompat="@mipmap/ic_launcher" />

            <QuickContactBadge
                android:id="@+id/quickContactBadge4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignTop="@+id/quickContactBadge3"
                android:layout_toEndOf="@+id/quickContactBadge3"
                android:layout_toRightOf="@+id/quickContactBadge3"
                app:srcCompat="@mipmap/ic_launcher" />

            <QuickContactBadge
                android:id="@+id/quickContactBadge5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignLeft="@+id/progressBar3"
                android:layout_alignStart="@+id/progressBar3"
                android:layout_alignTop="@+id/quickContactBadge4"
                app:srcCompat="@mipmap/ic_launcher" />

            <QuickContactBadge
                android:id="@+id/quickContactBadge6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@mipmap/ic_launcher"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/progressBar3"
                android:layout_alignEnd="@+id/progressBar3" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_above="@+id/textView2"
                android:layout_alignLeft="@+id/textView"
                android:layout_alignStart="@+id/textView"
                android:layout_marginBottom="10dp"
                app:srcCompat="@android:drawable/btn_star_big_on" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignLeft="@+id/quickContactBadge3"
                android:layout_alignStart="@+id/quickContactBadge3"
                android:layout_alignTop="@+id/imageButton"
                app:srcCompat="@android:drawable/checkbox_on_background" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignTop="@+id/imageButton2"
                android:layout_toEndOf="@+id/quickContactBadge3"
                android:layout_toRightOf="@+id/quickContactBadge3"
                app:srcCompat="@android:drawable/ic_input_add" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignLeft="@+id/quickContactBadge5"
                android:layout_alignStart="@+id/quickContactBadge5"
                android:layout_alignTop="@+id/imageButton3"
                app:srcCompat="@android:drawable/ic_lock_lock" />

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignLeft="@+id/quickContactBadge6"
                android:layout_alignStart="@+id/quickContactBadge6"
                android:layout_alignTop="@+id/imageButton4"
                app:srcCompat="@android:drawable/ic_lock_power_off" />
        </RelativeLayout>

    </FrameLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/navigation" />

</LinearLayout>
