<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:background="#f8f8f8"
    tools:context="layout.ProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#d9d9d9">

        <RelativeLayout
            android:id="@+id/profileLayout"
            android:layout_width="match_parent"
            android:layout_height="310dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/background_light">

            <TextView
                android:id="@+id/usernameText3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Username"
                android:textSize="40sp" />

            <ImageView
                android:id="@+id/profilePicture"
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:layout_alignLeft="@+id/usernameText3"
                android:layout_below="@+id/usernameText3"
                android:src="@drawable/ic_profilepic" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_alignTop="@+id/profilePicture"
                android:layout_marginLeft="50dp"
                android:layout_toEndOf="@+id/profilePicture"
                android:layout_toRightOf="@+id/profilePicture" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/experienceLayout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/profileLayout"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/background_light">

            <TextView
                android:id="@+id/levelText"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="false"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="9dp"
                android:gravity="center"
                android:text="Level 1"
                android:textSize="25sp" />

            <ProgressBar
                android:id="@+id/experienceBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/levelText"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/levelText"
                android:layout_toRightOf="@+id/levelText"
                android:progress="30" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/badgeLayout"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/experienceLayout"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/background_light">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/badgeButton1"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:scaleType="fitStart"
                        android:src="@android:drawable/btn_star_big_on" />

                    <ImageButton
                        android:id="@+id/badgeButton2"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:scaleType="fitStart"
                        android:src="@android:drawable/btn_star_big_on" />

                    <ImageButton
                        android:id="@+id/badgeButton3"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:scaleType="fitStart"
                        android:src="@android:drawable/btn_star_big_on" />

                    <ImageButton
                        android:id="@+id/badgeButton4"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:scaleType="fitStart"
                        android:src="@android:drawable/btn_star_big_on" />

                    <ImageButton
                        android:id="@+id/badgeButton5"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:scaleType="fitStart"
                        android:src="@android:drawable/btn_star_big_on" />

                </LinearLayout>
            </HorizontalScrollView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/buddyLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/badgeLayout"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/background_light">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipChildren="false"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/buddyButton1"
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_friend1" />

                    <ImageButton
                        android:id="@+id/buddyButton2"
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_friend2" />

                    <ImageButton
                        android:id="@+id/buddyButton3"
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_friend1" />

                    <ImageButton
                        android:id="@+id/buddyButton4"
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_friend2" />

                    <ImageButton
                        android:id="@+id/buddyButton5"
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_friend1" />

                </LinearLayout>

            </HorizontalScrollView>

        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>
